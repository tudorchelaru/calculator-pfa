---
import Layout from '../layouts/Layout.astro';
import Calculator from '../components/Calculator.astro';
---

<Layout title="Calculator Taxe PFA">
	<main>
		<div class="container">
			<h1>Calculator Taxe PFA</h1>
			<p class="subtitle">Calculează rapid taxele pentru PFA conform legislației 2025-2026</p>
			<Calculator />
		</div>
	</main>
</Layout>

<style>
	main {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}

	.container {
		background: white;
		border-radius: 16px;
		padding: 3rem;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
		max-width: 1200px;
		width: 100%;
	}

	h1 {
		font-size: 2.5rem;
		margin: 0 0 0.5rem 0;
		color: #1a1a1a;
		text-align: center;
	}

	.subtitle {
		text-align: center;
		color: #666;
		margin-bottom: 2rem;
		font-size: 1.1rem;
	}

	@media (max-width: 768px) {
		.container {
			padding: 2rem 1.5rem;
		}

		h1 {
			font-size: 2rem;
		}
	}
</style>
